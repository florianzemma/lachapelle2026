{
  "id": "bilan",
  "type": "SharedSlice",
  "name": "Bilan",
  "description": "Section bilan du mandat avec realisations et images",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default",
      "imageUrl": "",
      "primary": {
        "section_title": {
          "type": "StructuredText",
          "config": {
            "label": "Section Title",
            "placeholder": "Bilan du Mandat",
            "allowTargetBlank": true,
            "single": "heading2"
          }
        },
        "section_description": {
          "type": "StructuredText",
          "config": {
            "label": "Section Description",
            "placeholder": "Decouvrez les realisations de notre mandat",
            "allowTargetBlank": true,
            "single": "paragraph"
          }
        },
        "introduction_text": {
          "type": "StructuredText",
          "config": {
            "label": "Texte d'introduction",
            "placeholder": "Texte d'introduction avant les thématiques...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink,preformatted"
          }
        },
        "bilan_items": {
          "type": "Group",
          "config": {
            "label": "Bilan Items",
            "fields": {
              "icon": {
                "type": "Select",
                "config": {
                  "label": "Icône",
                  "placeholder": "Choisir une icône",
                  "options": [
                    "enfance_jeunesse_seniors",
                    "environnement_cadre_vie",
                    "soutien_economique_patrimoine",
                    "solidarite_social_vie_pratique",
                    "securite_prevention",
                    "sport_associations"
                  ]
                }
              },
              "title": {
                "type": "Text",
                "config": {
                  "label": "Title",
                  "placeholder": "Titre du thème"
                }
              },
              "description": {
                "type": "StructuredText",
                "config": {
                  "label": "Description",
                  "placeholder": "Description courte du thème",
                  "allowTargetBlank": true,
                  "single": "paragraph"
                }
              },
              "actions": {
                "type": "StructuredText",
                "config": {
                  "label": "Actions (ancien format - optionnel)",
                  "placeholder": "Liste des actions réalisées",
                  "allowTargetBlank": true,
                  "multi": "paragraph,strong,em,hyperlink,list-item,o-list-item"
                }
              },
              "action_details": {
                "type": "Group",
                "config": {
                  "label": "Actions avec photos",
                  "fields": {
                    "title": {
                      "type": "Text",
                      "config": {
                        "label": "Titre de l'action",
                        "placeholder": "Ex: Rénovation de la place du village"
                      }
                    },
                    "description": {
                      "type": "StructuredText",
                      "config": {
                        "label": "Description de l'action",
                        "placeholder": "Description",
                        "allowTargetBlank": true,
                        "multi": "paragraph,strong,list-item,hyperlink"
                      }
                    },
                    "image": {
                      "type": "Image",
                      "config": {
                        "label": "Photo de l'action",
                        "constraint": {
                          "width": 800
                        },
                        "thumbnails": []
                      }
                    },
                    "text": {
                      "type": "StructuredText",
                      "config": {
                        "label": "text",
                        "placeholder": "Texte",
                        "allowTargetBlank": true,
                        "multi": "strong,em,hyperlink,list-item,paragraph"
                      }
                    }
                  }
                }
              },
              "thematic_image": {
                "type": "Image",
                "config": {
                  "label": "Photo de thématique",
                  "constraint": {
                    "width": 1200
                  },
                  "thumbnails": []
                }
              }
            }
          }
        },
        "cta_text": {
          "type": "Text",
          "config": {
            "label": "CTA Text",
            "placeholder": "En savoir plus"
          }
        },
        "cta_link": {
          "type": "Text",
          "config": {
            "label": "CTA Link",
            "placeholder": "#contact"
          }
        }
      },
      "items": {}
    }
  ]
}
